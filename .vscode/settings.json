{
	"[astro]": {
		"editor.defaultFormatter": "astro-build.astro-vscode"
	},
	"cSpell.enableFiletypes": [
		"mdx"
	],
	"cSpell.words": [
		"antongolub",
		"apos",
		"astro",
		"astrojs",
		"astrolib",
		"clsx",
		"codeql",
		"Deno",
		"dzharii",
		"horiz",
		"Rehype",
		"stroustrup",
		"svgs",
		"tabler"
	],
	"css.customData": [
		"./vscode.tailwind.json"
	],
	"emojisense.languages": {
		"git-commit": true,
		"markdown": true,
		"mdx": true,
		"plaintext": {
			"emojiDecoratorsEnabled": false,
			"markupCompletionsEnabled": false
		},
		"scminput": true
	},
	"eslint.useFlatConfig": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"astro",
		"typescript",
		"typescriptreact"
	],
	"files.associations": {
		"*.excalidraw": "json",
		"*.excalidrawlib": "json",
	},
	"ltex.enabled": [
		"bibtex",
		"context",
		"context.tex",
		"html",
		"latex",
		"markdown",
		"mdx",
		"org",
		"restructuredtext",
		"rsweave"
	],
	"markdownlint.ignore": ".markdownlintignore",
	"prettier.documentSelectors": [
		"**/*.astro"
	],
	"search.exclude": {
		"**/.yarn": true
	},
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"yaml.schemas": {
		"./.vscode/astrowind/config-schema.json": "apps/website/src/config.yaml"
	}
}