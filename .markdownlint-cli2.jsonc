{
	"ignores": [
		".changeset/*.md",
		"**/CHANGELOG.md",
		"**/docs",
		"**/LICENSE",
		"flow-types.md",
		"github-page",
		"slides/*.slides.md"
	],
	"config": {
		"line-length": false,
		"hard-tab": false,
		"no-missing-space-atx": false,
